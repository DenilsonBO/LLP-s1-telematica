#include <stdio.h>

#define tamanho 2

void somaMatrizes(int (*A)[tamanho], int (*B)[tamanho], int (*C)[tamanho]) {
    int i, j;
    
    for (i = 0; i < tamanho; i++) {
        for (j = 0; j < tamanho; j++) {
            C[i][j] = A[i][j] + B[i][j];
        }
    }
}

void imprimirMatriz(int (*matriz)[tamanho]) {
    int i, j;
    
    for (i = 0; i < tamanho; i++) {
        for (j = 0; j < tamanho; j++) {
            printf("%d ", matriz[i][j]);
        }
        printf("\n");
    }
    printf("\n");
}

int main() {
    int A[tamanho][tamanho] = {{1, 2}, {3, 4}};
    int B[tamanho][tamanho] = {{5, 6}, {7, 8}};
    int C[tamanho][tamanho];
    
    somaMatrizes(A, B, C);
    printf("Matriz C =(soma de A e B):\n\n");
    imprimirMatriz(C);
    
    return 0;
}
